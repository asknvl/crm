<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
			<Button Classes="Button Top">				
			</Button>
        </Border>
    </Design.PreviewWith>
	<Styles.Resources>
		<Color x:Key="SeparatorColor">#FFE5E5E5</Color>
	</Styles.Resources>
	<!--TextBlock-->
	<Style Selector="TextBlock">
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="Foreground" Value="#FF464646"/>
	</Style>			
	<!--Buttons-->	
	<Style Selector="Button.Top">
		<Style.Resources>
			<Color x:Key="ButtonBackgroundPressed">#FFFFFFFF</Color>
			<Color x:Key="ButtonBackgroundPointerOver">#FFF5F5F5</Color>
			<Color x:Key="ButtonBorderBrushPointerOver">#FF464646</Color>
			<Color x:Key="ButtonBorderBrushPressed">#FF464646</Color>			
		</Style.Resources>
		<Setter Property="Background" Value="#FFFFFFFF"/>
		<Setter Property="BorderBrush" Value="#FF464646"/>
		<Setter Property="Height" Value="50"/>
		<Setter Property="Width" Value="200"/>
		<Setter Property="Margin" Value="0, 20, 30, 20"/>		
	</Style>

</Styles>
